<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_task_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:padding="25dp">

        <ImageView
            android:id="@+id/image_item_task_list"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="Item da lista"
            android:padding="0dp"
            android:src="@drawable/checklist" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Primeira tarefa"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_estimated_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_description"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="30/10/24" />

        <RatingBar
            android:id="@+id/ratingbar_priority_level"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_estimated_date"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>